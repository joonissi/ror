<p id="notice"></p>


<h2>
  <%= @brewery.name %>
  <% if not @brewery.active  %>
    <span class="badge badge-info">retired</span>
  <% end %>
</h2>

<p>
  Panimolla on oluita: <%= @brewery.beers.count %>
</p>

<p>
 <% @brewery.beers.each do |beer| %>
   <%= link_to beer.name, beer %> <br>
 <% end %>
</p>

<p>
  <strong>Year:</strong>
  <i><%= @brewery.year %></i>
</p>

<% if @brewery.ratings.empty? %>
 brewery has not yet been rated!
<% else %>
 <%= "Has " + pluralize(@brewery.rating_average, 'rating', 'ratings') + ", average " +  @brewery.rating_average.to_s %>
<% end %>

<br>
<%= link_to "change activity", toggle_activity_brewery_path(@brewery.id), method: :post, class: "btn btn-primary" %>

<br>
<br>

<%= edit_and_destroy_buttons(@brewery) %>

