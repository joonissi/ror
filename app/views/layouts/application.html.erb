<!DOCTYPE html>
<html>
  <head>
    <title>Ratebeer</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="navibar">
      <%= link_to 'breweries', breweries_path %>
      <%= link_to 'beers', beers_path %>
      <%= link_to 'ratings', ratings_path %>
      <%= link_to 'users', users_path %>
      <%= link_to 'clubs', beer_clubs_path %>
      <% if current_user %>
        <%= link_to current_user.username, user_path(current_user.id) %>
        <%= link_to 'rate a beer', new_rating_path %>
        <%= link_to 'join a club', new_membership_path %>
        <%= link_to 'sign out', session_path, method: :delete %>
      <% else %>
        <%= link_to 'sign in', new_session_path %>
        <%= link_to 'sign up', new_user_path %>
        
      <% end %>
      <%= link_to 'search', places_path %>
  </div>

    <%= yield %>
  </body>
</html>
