<p id="notice"></p>

<p>
  <strong>Name:</strong>
  <%= @style.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @style.description %>
</p>

<p>
  <% if @style.beers.any? %>
    beers
    <% @style.beers.each do |beer| %>
      <li> <%= link_to beer.name, beer %> </li>
    <% end %>
  <% end %>
</p>

<%= edit_and_destroy_buttons(@style) %>

